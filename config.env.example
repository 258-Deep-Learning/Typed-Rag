# Typed-RAG Configuration File
# Copy this to config.env and fill in your credentials
# Load with: source config.env

# ============================================
# OpenAI Configuration (for LLM)
# ============================================
# Get from: https://platform.openai.com/api-keys
export OPENAI_API_KEY="sk-your-openai-api-key-here"

# ============================================
# Pinecone Configuration
# ============================================
# Get from: https://www.pinecone.io/
export PINECONE_API_KEY="your-pinecone-api-key-here"
export PINECONE_ENVIRONMENT="your-environment"  # e.g., us-west1-gcp, us-east1-gcp
export PINECONE_INDEX_NAME="typed-rag"

# ============================================
# Qdrant Configuration
# ============================================
# Self-hosted Qdrant (default: localhost)
export QDRANT_URL="localhost"
export QDRANT_PORT="6333"
export QDRANT_COLLECTION="typed-rag"

# For Qdrant Cloud:
# export QDRANT_URL="your-cluster-url.qdrant.io"
# export QDRANT_API_KEY="your-qdrant-api-key"

# ============================================
# Weaviate Configuratio
# ============================================
# Self-hosted Weaviate (default: localhost)
export WEAVIATE_URL="http://localhost:8080"
export WEAVIATE_CLASS="Document"

# For Weaviate Cloud:
# export WEAVIATE_URL="https://your-cluster.weaviate.network"
# export WEAVIATE_API_KEY="your-weaviate-api-key"

# ============================================
# Default Backend Selection
# ============================================
# Options: faiss, pinecone, qdrant, weaviate
export DEFAULT_VECTOR_BACKEND="faiss"

# ============================================
# Index Paths
# ============================================
# Wikipedia indexes (default)
export WIKIPEDIA_INDEX_DIR="indexes"

# Custom documents indexes
export CUSTOM_INDEX_DIR="indexes/custom"

